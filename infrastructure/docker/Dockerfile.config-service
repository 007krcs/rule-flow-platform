FROM node:20-alpine AS builder

WORKDIR /app
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY packages/backend/config-service/package.json ./packages/backend/config-service/
COPY packages/backend/shared/package.json ./packages/backend/shared/

RUN npm install -g pnpm@8
RUN pnpm install --frozen-lockfile

COPY packages/backend/config-service ./packages/backend/config-service
COPY packages/backend/shared ./packages/backend/shared

RUN cd packages/backend/config-service && pnpm build

FROM node:20-alpine
WORKDIR /app
COPY --from=builder /app/packages/backend/config-service/dist ./dist
COPY --from=builder /app/packages/backend/config-service/package.json ./
RUN npm install --production

EXPOSE 3002
CMD ["node", "dist/server.js"]
